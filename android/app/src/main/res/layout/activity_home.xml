<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:background="@color/background">

    <EditText
        android:id="@+id/et_word_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/bg_word_list"
        android:fontFamily="@font/e_ukraine_regular"
        android:gravity="clip_horizontal"
        android:inputType="textMultiLine"
        android:padding="15dp"
        android:textColor="@color/black"
        android:textColorHint="@color/gray"
        android:textSize="15dp"
        android:hint="Введіть слова та їх переклад\n\nПриклад:\napple - яблуко"
        app:layout_constraintTop_toTopOf="@+id/guideline_top_word_list"
        app:layout_constraintBottom_toTopOf="@+id/guideline_bottom_word_list" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_save_list"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:stateListAnimator="@null"
        android:background="@drawable/bg_orange_button"
        android:fontFamily="@font/e_ukraine_bold"
        android:gravity="center"
        android:text="Редагувати список слів"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@+id/et_word_list" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_cancel_save"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:stateListAnimator="@null"
        android:background="@drawable/bg_red_button"
        android:fontFamily="@font/e_ukraine_bold"
        android:gravity="center"
        android:text="Скасувати"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:textSize="15dp"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@+id/btn_save_list" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_top_word_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_bottom_word_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>